<% layout('/layout/main')%> 
<% block('title', 'My Blog')%>

<form action="/posts" method="post" enctype="multipart/form-data" onsubmit="(e) => {e.preventDefault()}">
    <div>
        <label for="image">
            Image
        </label>
        <input type="file" name="image" id="image">
    </div>
    <div>
        <label for="title">
            Title
        </label>
        <input type="text" name="title" id="title">
    </div>
    <div>
        <label for="category">
            Category
        </label>
        <input type="text" name="category" id="category">
    </div>
    <div>
        <label for="content">
            Content
        </label>
        <textarea name="content" id="content" cols="30" rows="10"></textarea>
    </div>

    <button type="submit">Submit</button>
</form>