<% layout('/layout/main')%> 
<% block('title', 'My Blog')%>

<form action="/posts" method="post" enctype="multipart/form-data" onsubmit="(e) => {e.preventDefault()}" class="max-w-[1024px] m-auto py-20 flex flex-col gap-5 w-fit">
    <h1 class="font-cormorant text-5xl border-b-2 border-dashed border-black pb-4">New post</h1>
    <div class="flex flex-col outline-none">
        <label for="title" class="text-lg font-poppins">
            Title
        </label>
        <input type="text" name="title" id="title" class="outline-none px-2 text-lg py-1 almost-white w-[28em] font-poppins shadow-sm">
    </div>
    <div class="flex flex-col">
        <label for="category" class="text-lg font-poppins">
            Category
        </label>
        <input type="text" name="category" id="category" class="outline-none px-2 text-lg py-1 almost-white w-[28em] font-poppins shadow-sm">
    </div>
    <div class="flex flex-col">
        <label for="content" class="text-lg font-poppins">
            Content
        </label>
        <textarea name="content" id="content" cols="30" rows="10" class="outline-none px-2 text-lg py-1 almost-white w-[28em] font-poppins shadow-sm"></textarea>
    </div>
    <div class="flex flex-col">
        <label for="image" class="text-lg font-poppins">
            Image
        </label>
        <input type="file" name="image" id="image" class="text-base">
    </div>

    <div class="flex justify-center gap-5 self-end flex-row-reverse py-4">
        <button type="submit" class="bg-red-800 hover:bg-red-900 hover:shadow-xl text-white font-semibold py-1 px-2 shadow-lg text-lg">Submit</button>
        <a href="/blog" class="bg-gray-400 hover:bg-gray-500 hover:shadow-xl text-white font-semibold py-1 px-2 shadow-lg text-lg">Cancel</a>
    </div>

    <a href="/auth/logout" class="text-lg underline">Logout</a>
</form>