<body class="w-full">

    <% if(flash) { -%>
        <div id="flash" class="fixed -left-[999px] top-20 z-50 text-white font-semibold md:text-base text-sm p-4 shadow-xl bg-red-400 transition-all">
            <%= flash %>
        </div>
    <% } -%>

    <script>
        try{
            const flash = document.getElementById('flash');
            flash.classList.remove('-left-[999px]');
            flash.classList.add('left-0');
            setTimeout(() => {
                flash.classList.remove('left-0');
                flash.classList.add('-left-[999px]');

                setTimeout(() => {
                    flash.classList.add('hidden');
                }, 2000);
                
            }, 5000);
        } catch (e) {}
        
        window.addEventListener('scroll', () => {
            const header = document.querySelector('header');
            header.classList.toggle('glass-effect', window.scrollY > 300);
        })
    </script>
    
    <header class="flex justify-around z-20 p-4 text-black sticky top-0 items-center bg-[#F8FAF9] transition-all ">
        <a href="/" class="font-cormorant md:text-3xl text-lg">Rodrigo Casanova</a>

        <ul class="flex gap-10 text-lg">
            <li>
                <a href="/blog" class=" after:bg-red-800 after:h-1 after:w-full after:absolute after:-bottom-1 after:left-0 relative hover:after:-bottom-2 after:transition-all transition-all md:text-xl text-sm after:transform-gpu">My Blog</a>
            </li>
            <li>
                <% if(user) { -%>
                    <a href="<% if(user.email == 'rodrigocralha@gmail.com') { -%>/makepost<% } else { -%>/logout<% } -%>" class=" after:bg-red-800 after:h-1 after:w-full after:absolute after:-bottom-1 after:left-0 relative hover:after:-bottom-2 after:transition-all transition-all md:text-xl text-sm after:transform-gpu"><%= user.name %></a>
                <% } else { -%>
                    
                <% } -%>
            </li>
        </ul>
    </header>

    <main class="bg-gray-200 relative z-10 min-h-screen">
        <%-body -%>
    </main>

